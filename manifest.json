{
    "manifest_version": 3,
    "name": "Summarizzler",
    "version": "1.0",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "options_page": "options.html",
    "host_permissions": ["<all_urls>"]

}